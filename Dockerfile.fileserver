FROM python:3.12-slim

WORKDIR /app

# Copiar solo lo necesario para file server
COPY requirements.txt .
RUN pip install --no-cache-dir fastapi uvicorn

COPY file_server.py .
COPY config.py .
COPY utils/ utils/

# Crear directorio de exports
RUN mkdir -p exports

# Exponer puerto
EXPOSE 8000

# Comando para ejecutar file server
CMD ["python", "file_server.py"]
