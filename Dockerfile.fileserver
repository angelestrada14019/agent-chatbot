FROM python:3.12-slim

WORKDIR /app

# Copiar requirements y instalar TODAS las dependencias
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copiar c√≥digo necesario
COPY file_server.py .
COPY config.py .
COPY utils/ utils/

# Crear directorio de exports
RUN mkdir -p exports

# Exponer puerto
EXPOSE 8001

# Comando para ejecutar file server
CMD ["python", "file_server.py"]
